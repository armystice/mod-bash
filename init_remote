#!/bin/bash
# A script that will install and initialise this mod remotely
#
INIT_SCRIPT_URL="http://vfs1.home3:3000/armystice/mod-bash/raw/branch/main/init"
INIT_SCRIPT_PATH="/tmp/${ENV_SCRIPT_URL}"

curl -o "${INIT_SCRIPT_PATH}" "${INIT_SCRIPT_URL}"
if [ $? -eq 0 ] && [ -f "${INIT_SCRIPT_PATH}" ]; then
    bash "${INIT_SCRIPT_PATH}"
    rm "${INIT_SCRIPT_PATH}"
else
    echo "env download failed"
fi